					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>id2</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>3.1.2</version>
						<configuration>
							<suiteXmlFiles>
								<suiteXmlFile>system.xml</suiteXmlFile>
